<%- include ('partials/header.ejs') %>
<body>
  <%- include ('partials/navbar.ejs') %>
  <br>
  <div class="container">
    <hr>
    <h1><%= pergunta.titulo %></h1>
    <p><%= pergunta.descricao %></p>
    <hr>
    <form method="POST" action="/responder">
      <h4>Responda</h4>
      <textarea name="corpo" placeholder="Digite sua Resposta" class="form-control"></textarea><br>
      <input type="hidden" name="pergunta" value="<%= pergunta.id %>">
      <button class="btn btn-primary">Responder</button>
    </form>
    <hr>
    <h4>Respostas:</h4>
    <hr>
    <% respostas.forEach(resposta => {%>
      <br>
      <div class="card">
        <div class="card-body">
          <p><%= resposta.corpo %></p>
        </div>
      </div>
    <%})%>
  </div>
</body>
<%- include ('partials/footer.ejs') %>
